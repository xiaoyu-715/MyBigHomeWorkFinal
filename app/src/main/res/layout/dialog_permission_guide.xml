<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp"
    android:layout_margin="16dp">

    <!-- 图标 -->
    <ImageView
        android:id="@+id/ivPermissionIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_settings"
        android:tint="@color/primary" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvPermissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="开启权限"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center" />

    <!-- 描述 -->
    <TextView
        android:id="@+id/tvPermissionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="权限描述"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:lineSpacingExtra="4dp" />

    <!-- 操作步骤 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_steps_container">

        <TextView
            android:id="@+id/tvPermissionSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操作步骤"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnGoToSettings"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="前往设置"
            android:backgroundTint="@color/primary" />
    </LinearLayout>

</LinearLayout>
