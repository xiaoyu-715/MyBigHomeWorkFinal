<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="14dp"
    android:background="?attr/selectableItemBackground">

    <!-- 阶段状态图标 -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="14dp">

        <!-- 状态圆圈背景 -->
        <View
            android:id="@+id/view_phase_status_bg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_phase_status_pending" />

        <!-- 状态图标 -->
        <ImageView
            android:id="@+id/iv_phase_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_time"
            app:tint="@color/text_secondary" />

    </FrameLayout>

    <!-- 阶段信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 阶段名称和状态标签 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_phase_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="阶段名称"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_phase_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开始"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_phase_status_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 阶段目标 -->
        <TextView
            android:id="@+id/tv_phase_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阶段目标描述"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <!-- 进度条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/progress_phase"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/bg_progress_bar_phase" />

            <TextView
                android:id="@+id/tv_phase_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:minWidth="36dp"
                android:gravity="end" />

        </LinearLayout>

        <!-- 天数信息 -->
        <TextView
            android:id="@+id/tv_phase_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10 天"
            android:textSize="11sp"
            android:textColor="@color/text_hint"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
