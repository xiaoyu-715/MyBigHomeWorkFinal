<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 左侧图标 -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp">

            <!-- 分类图标（文件夹） -->
            <ImageView
                android:id="@+id/iv_folder_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_folder"
                android:padding="8dp"
                android:background="@drawable/bg_icon_circle_blue"
                android:visibility="gone" />

            <!-- 词书图标（书本） -->
            <ImageView
                android:id="@+id/iv_book_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_book"
                android:padding="8dp"
                android:background="@drawable/bg_icon_circle_green" />

        </FrameLayout>

        <!-- 中间信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 词书名称 -->
            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大学英语四级词汇"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- 作者/出版社 -->
            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人民教育出版社"
                android:textSize="12sp"
                android:textColor="#999999"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- 单词数量和进度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- 单词数量 -->
                <TextView
                    android:id="@+id/tv_word_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3500 词"
                    android:textSize="13sp"
                    android:textColor="#2196F3"
                    android:background="@drawable/bg_tag_blue"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <!-- 学习进度 -->
                <LinearLayout
                    android:id="@+id/layout_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#4CAF50"
                        android:progressBackgroundTint="#E0E0E0" />

                    <TextView
                        android:id="@+id/tv_progress_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 子分类数量（分类时显示） -->
                <TextView
                    android:id="@+id/tv_child_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 个子分类"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- 右侧箭头 -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="8dp"
            app:tint="#CCCCCC" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
