<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部：语言标签和时间戳 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 语言标签 -->
            <TextView
                android:id="@+id/tv_language_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_task_progress"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="@color/primary_blue"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="英 → 中" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 时间戳 -->
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                tools:text="今天 14:30" />

        </LinearLayout>

        <!-- 源文本 -->
        <TextView
            android:id="@+id/tv_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.2"
            tools:text="Hello World, this is a sample text for translation history preview." />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/divider" />

        <!-- 翻译文本 -->
        <TextView
            android:id="@+id/tv_translated_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            tools:text="你好世界，这是一个用于翻译历史预览的示例文本。" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
