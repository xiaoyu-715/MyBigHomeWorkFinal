<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="?attr/selectableItemBackground">

        <!-- 复选框 -->
        <CheckBox
            android:id="@+id/cb_task_completed"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/checkbox_task_selector"
            android:layout_marginEnd="14dp" />

        <!-- 任务内容 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务内容"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_estimated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计 20 分钟"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- 完成状态标签 -->
        <TextView
            android:id="@+id/tv_task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待完成"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/bg_task_status_pending"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
